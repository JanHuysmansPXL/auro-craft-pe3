{% extends '_index' %}

{% set products = craft.entries.section('products').all() %}

{% block content %}

  {# DIT IS DE NAVBAR #}
  {% include "_snippets/_navbar.twig" %}

  <section class="gallery_header bg-darkest mt-xl">
    <h2 class="txt-body_md">{{ entry.headingTitle }}.<br></h2>
    <h3 class="txt-title_sm">{{ entry.headingSubtitle}}</h3>
  </section>


   <!-- CONTAINER MET FILTERMENU EN PRODUCT-OVERZICHT  -->
<div class="container-fluid products-wrapper bg-darkest mx-auto">

<!-- LEFT SIDE WITH FILTERS -->
  <aside class="filter-menu">
    <h2 class="filter-title">Filter</h2>
    <ul class="filter-list">
      <li class="filter-listitem filter-active"><a class="filter-toggle" href="#">All</a></li>
      <li class="filter-listitem"><a class="filter-toggle" href="#">Auropods</a></li>
      <li class="filter-listitem"><a class="filter-toggle" href="#">AuroVision</a></li>
      <li class="filter-listitem"><a class="filter-toggle" href="#">AuroTouch</a></li>
      <li class="filter-listitem"><a class="filter-toggle" href="#">AuroLink</a></li>
    </ul>
  </aside>

<!-- RIGHT SIDE WITH PRODUCTS -->
  <main class="product-list">
    <!-- Voeg meer productkaarten toe -->
    {% if products|length %}
      {% for product in products %}
       {% set image = product.productImage.one() %}
        <div class="product-card">
         {% if image %}
            <div class="thumbnail">
              <img src="{{ image.url }}" alt="{{ image.title }}">
              <p class="txt-lightpink txt-body_md" >{{ product.productDescription }}</p>
      <!--        <time class="txt-light txt-body_md" datetime="{{ product.postDate | atom }}">{{ product.postDate | date }}</time> -->
            </div>
          {% endif %}
       <!--  <img src="assets/images/gallery_4.png" alt="Product 1 - Nubis"> -->
          <div class="card-info">
            <div class="card-txt">
              <h3 class="product-name">{{ product.title }}</h3>
              <p class="product-price">â‚¬ {{ product.price }}</p>
            </div>
            <a href="{{ product.url }}" class="details-button">Details</a>   
          </div>
        </div>
        {% endfor %}
    {% else %}
      <p>No products found.</p>
    {% endif %}
  </main> 

  <!--EINDE GALLERY DIV !-->
</div>

  <!--DIT IS DE FOOTER-->
{% include "_snippets/_footer.twig" %}

{% endblock %}
