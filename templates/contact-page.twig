{% extends "_index" %}

{% block content %}

{% include "_snippets/_navbar" %}
{# DIT IS HET BEGIN VAN DE BLOCK #}

{% set image = entry.contactImage.one() %}


<section class="container-fluid p-md mt-xl">   
    <h1 class="txt-heading_xxl">{{entry.sectionTitle}}</h1>
    <p class="txt-heading_lg">{{entry.sectionBodytext}}</p>
    <img class="image-back" src={{ image.url }} alt={{ image.title }}></img>
</section>

<div class="container-fluid login-frame">
  <form class="login-form">
    <h3 class="txt-title_sm"> {{entry.sectionTitle}}</h3>
    <label class="login-label" for="username">Name</label>
    <input class="login-input_txt" type="text" placeholder="Username" id="username" required>
    <label class="login-label" for="password">E-mail</label>
    <input class="login-input_txt" type="password" placeholder="Password" id="password" required>
    <!-- 
    <label class="login-label" for="message">Message</label>
    <textarea class="login-input_txt" placeholder="message" id="message" rows="4" required>
    -->
    <button type="submit" class="button form-button">Submit</button>
     Forgot Password OF Uitloggen. 
    <a class="form-link">Log out</a>
  </form>
</div>

{% endblock %}
