{% extends "_index" %}

{% block content %}

{% include "_snippets/_navbar" %}
{# DIT IS HET BEGIN VAN DE BLOCK #}

{% set image = entry.contactImage.one() %}

<section class="container-fluid p-md mt-xl">   
    <h1 class="txt-heading_lg">{{entry.sectionTitle}}</h1>
        <p class="txt-body_md">{{entry.sectionBodytext}}</p>
    <img src={{ image.url }} alt={{ image.title }}></img>
    <p class="txt-body_md">{{entry.sectionBodytext2}}</p>
</section>

<div class="container-fluid login-frame">
  <form class="login-form">
    <h3 v-if="usernameInput" class="txt-title_sm"> {{entry.sectionTitle}}</h3>
    <h3 v-else class="txt-title_sm"> Welcome</h3>

    <label class="login-label" for="username">Username ?</label>
    <input class="login-input_txt" type="text" placeholder="Username" id="username" required>
    <label class="login-label" for="password">Password</label>
    <input class="login-input_txt" type="password" placeholder="Password" id="password" required>
    <button type="submit" class="button form-button" >Submit</button>

    <!-- Forgot Password OF Uitloggen. -->
    <a class="form-link">Log out</a>
  </form>
</div>

{% endblock %}
